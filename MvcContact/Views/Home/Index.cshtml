@model List<Person>
@{
    ViewData["Title"] = "Home Page";
}
@{Layout = null;}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Telefon Rehber  Uygulaması</p>
</div>
<div>
    <a asp-action="CreatePerson">Yeni Kişi </a>
    <h2>Contact List</h2>

    <table>
        <tr>
            <th>ID</th>
            <th>AD</th>
            <th>SOYAD</th>
            <th>TELEFON</th>
            <th> </th>
        </tr>
        @{
            foreach (Person kisi in Model)
            {
                <tr>
                    <td>@kisi.Id</td>
                    <td>@kisi.Name</td>
                    <td>@kisi.Surname</td>
                    <td>@kisi.Phone</td>
                    <td><a onclick="return eminMisiniz(@kisi.Id)" asp-route-id="@kisi.Id" asp-action="Delete">Sil </a></td>
                    <td><a asp-route-id="@kisi.Id" asp-action="CreatePerson">Düzenle </a></td>

                </tr>

                @*<tr>
                    <td>Turgut Ergovan</td>
                    <td>Guillaume Manthe</td>
                    <td>French</td>
                </tr>*@

            }
        }


    </table>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
    <script>
        function eminMisiniz(id){
         //   alert(id+"id li kayıt silinecek emin misiniz?")
         var dialogResult = confirm(id+"id li kayıt silinecek emin misiniz?");
         console.log(dialogResult);
         return dialogResult;
        }
    </script>
</div>